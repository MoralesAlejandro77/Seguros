<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

  <LinearLayout
      android:id="@+id/LinearLayout2"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:layout_alignParentTop="true"
      android:background="@color/White"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/fondo_tresprov_1">

      <ImageView
          android:id="@+id/imageView1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/segsepelio" />

      <TextView
          android:id="@+id/textView1"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_marginTop="10dp"
          android:text="Seguro de Sepelio"
          android:textAppearance="?android:attr/textAppearanceMedium"
          android:textColor="@color/White"
          android:textStyle="bold" />

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:gravity="right"
          android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bcompartir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/sharenube" />

        <ImageButton
            android:id="@+id/bayuda"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selectortable"
            android:scaleType="fitCenter"
            android:src="@android:drawable/ic_menu_help" />
      </LinearLayout>

    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:elevation="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="30dp"
          android:layout_marginTop="5dp"
          android:background="@color/fondo_tresprov_1"
          android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

          <ImageView
              android:id="@+id/imageView5"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:src="@drawable/ic_create_black_24dp" />

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:text="Tipo de Tarifa"
              android:textAppearance="?android:attr/textAppearanceMedium"
              android:textColor="@color/White" />
        </LinearLayout>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_style_black_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tarifa : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/btarifa"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:entries="@array/tarifas"
            android:spinnerMode="dropdown" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_local_offer_black_24dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Tipo de Plan : "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/bplanes"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:entries="@array/planes"
            android:spinnerMode="dropdown" />
      </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:elevation="8dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/fondo_tresprov_1"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_create_black_24dp" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="Servicio"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White"
            android:textStyle="bold" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

      <CheckBox
          android:id="@+id/CheckBox04"
          android:layout_width="wrap_content"
          android:layout_height="fill_parent"
          android:layout_marginLeft="20dp"
          android:checked="true"
          android:clickable="false"
          android:text="Sepelio"
          android:textColor="@color/Green"
          android:textStyle="bold" />

      <TextView
          android:id="@+id/tot_sepelio"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:text="10.000"
          android:textColor="@color/Green" />

      <ProgressBar
          android:id="@+id/progressBar1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:visibility="invisible" />
    </LinearLayout>

  </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_margin="2dp"
      android:layout_marginBottom="5dp"
      android:layout_marginTop="5dp"
      android:elevation="8dp">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/fondo_tresprov_1"
        android:orientation="vertical">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_create_black_24dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="4dp"
            android:text="Servicios Adicionales"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White"
            android:textStyle="bold" />
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="150dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:orientation="vertical">

        <CheckBox
            android:id="@+id/chk_parcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="Parcela"
            android:textColor="@color/Blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tot_parcela"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:text="10.000"
            android:textColor="@color/Blue" />
      </LinearLayout>

      <LinearLayout
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="3dp"
          android:orientation="vertical">

        <CheckBox
            android:id="@+id/chk_luto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Luto"
            android:textColor="@color/BlueViolet"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tot_luto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="10.000"
            android:textColor="@color/BlueViolet" />
      </LinearLayout>
    </LinearLayout>
  </LinearLayout>
  </android.support.v7.widget.CardView>




  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="@color/fondo_tresprov_2"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_people_black_24dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Integrantes"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White"
            android:textStyle="bold" />
      </LinearLayout>

      <Button
          android:id="@+id/bagregar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:background="@drawable/index"
          android:onClick="nuevosepelio" />

      <CheckBox
          android:id="@+id/gf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="20dp"
          android:layout_marginRight="5dp"
          android:checked="false"
          android:text="Grupo Familiar"
          android:textColor="@color/White" />
    </LinearLayout>
  </android.support.v7.widget.CardView>
    <ListView
        android:id="@+id/listView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="40dp"
        android:layout_weight="1"
        android:choiceMode="multipleChoice"
        android:fastScrollAlwaysVisible="true">

    </ListView>
  </LinearLayout>

  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="40dp"
      android:layout_alignParentBottom="true"
      android:layout_marginTop="1dp"
      android:background="@color/fondo_tresprov_2"
      android:gravity="right">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:text="Premio Mensual"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Aqua"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/totalPrima"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:gravity="right"
        android:text="IMPORTE"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textStyle="bold" />
  </LinearLayout>

</RelativeLayout>
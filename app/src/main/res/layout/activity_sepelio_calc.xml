<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/RelativeLayout1"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:background="@color/tresprov">

				<ImageView
					android:id="@+id/imageView1"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/segsepelio" />

				<TextView
					android:id="@+id/textView1"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginTop="10dp"
					android:text="Seguro de Sepelio"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@color/White"
					android:textStyle="bold" />

				<LinearLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:gravity="right"
					android:orientation="horizontal">

					<ProgressBar
						android:id="@+id/progressBar1"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_weight="1"
						android:background="@color/fondo_tresprov_1"
						android:visibility="invisible" />

				</LinearLayout>

			</LinearLayout>

			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="5dp"
				android:background="@color/fondo_tresprov_2"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent">

					<ImageView
						android:id="@+id/imageView5"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginTop="4dp"
						android:background="@mipmap/ic_titular" />

					<TextView
						android:id="@+id/textView17"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:layout_marginTop="8dp"
						android:text="Edad : "
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="@color/Black"
						android:textSize="14sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/calcedad"
						android:layout_width="40dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:layout_marginTop="8dp"
						android:background="@color/fondo_tresprov_1"
						android:gravity="right"
						android:text="0"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="@color/AntiqueWhite"
						android:textSize="14sp"
						tools:enabled="false" />

					<TextView
						android:id="@+id/textView15"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginLeft="10dp"
						android:layout_marginTop="8dp"
						android:text="Total :"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="@color/Black"
						android:textSize="14sp"
						android:textStyle="bold" />

					<TextView
						android:id="@+id/idtotal"
						android:layout_width="70dp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="5dp"
						android:layout_marginTop="8dp"
						android:gravity="right"
						android:text="0,00"
						android:textAppearance="?android:attr/textAppearanceMedium"
						android:textColor="@color/White"
						android:textSize="14sp"
						android:textStyle="bold" />

				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/LinearLayout2"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_alignParentStart="true"
				android:layout_alignParentTop="true"
				android:background="@color/White"
				android:orientation="vertical"
				android:padding="3dp">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<android.support.v7.widget.CardView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:layout_marginBottom="5dp"
						android:layout_marginTop="5dp"
						android:elevation="8dp">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_marginTop="5dp"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button
										android:id="@+id/idb1"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="1" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button
										android:id="@+id/idb2"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="2" />

								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button
										android:id="@+id/idb3"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="3" />

								</LinearLayout>
							</LinearLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button

										android:id="@+id/idb4"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="4" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button

										android:id="@+id/idb5"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="5" />

								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button

										android:id="@+id/idb6"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="6" />

								</LinearLayout>
							</LinearLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button

										android:id="@+id/idb7"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="7" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button

										android:id="@+id/idb8"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="8" />

								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button

										android:id="@+id/idb9"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="9" />

								</LinearLayout>
							</LinearLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button
										android:id="@+id/idb0"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:onClick="calcular"
										android:padding="3dp"
										android:text="0" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_weight="1"
									android:orientation="vertical">

									<Button
										android:id="@+id/idbborrar"
										android:layout_width="match_parent"
										android:layout_height="wrap_content"
										android:elevation="2dp"
										android:padding="3dp"
										android:text="Borrar"
										android:textColor="#E53935" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:orientation="vertical">

								</LinearLayout>

							</LinearLayout>

						</LinearLayout>
					</android.support.v7.widget.CardView>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:orientation="vertical">

					<android.support.v7.widget.CardView
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:layout_margin="2dp"
						android:layout_marginBottom="5dp"
						android:layout_marginTop="5dp"
						android:elevation="8dp">

						<LinearLayout
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical">

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:layout_weight="1"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="match_parent"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<RadioButton

										android:id="@+id/idtarifa3"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:layout_marginTop="3dp"
										android:onClick="tarifas"
										android:text="Tarifa 3"
										android:textColor="@color/DarkRed"
										android:textSize="12sp" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="match_parent"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<RadioButton

										android:id="@+id/idtarifa29"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:layout_marginTop="3dp"
										android:onClick="tarifas"
										android:text="Tarifa 29"
										android:textColor="@color/DarkRed"
										android:textSize="12sp" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="match_parent"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<CheckBox
										android:id="@+id/gf"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_marginLeft="20dp"
										android:layout_marginRight="5dp"
										android:layout_weight="1"
										android:checked="false"
										android:onClick="calcular_valor"
										android:text="Grupo fam."
										android:textSize="12sp" />
								</LinearLayout>
							</LinearLayout>

							<LinearLayout
								android:layout_width="match_parent"
								android:layout_height="45dp"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<RadioButton
										android:id="@+id/idplana"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:onClick="planes"
										android:text=" Plan  A"
										android:textSize="12sp" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<RadioButton
										android:id="@+id/idplanc"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:onClick="planes"
										android:text=" Plan   C "
										android:textSize="12sp" />
								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<RadioButton
										android:id="@+id/idplang"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:onClick="planes"
										android:text=" Plan  G "
										android:textSize="12sp" />
								</LinearLayout>
							</LinearLayout>

							<LinearLayout
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<CheckBox
										android:id="@+id/CheckBox04"
										android:layout_width="wrap_content"
										android:layout_height="fill_parent"
										android:layout_gravity="center_horizontal"
										android:checked="true"
										android:clickable="false"
										android:onClick="calcular_valor"
										android:text="Sepelio"
										android:textColor="@color/Green"
										android:textStyle="bold" />

								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<CheckBox
										android:id="@+id/chk_parcela"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:layout_weight="1"
										android:onClick="calcular_valor"
										android:text="Parcela  "
										android:textColor="@color/Blue"
										android:textStyle="bold" />

								</LinearLayout>

								<LinearLayout
									android:layout_width="120dp"
									android:layout_height="40dp"
									android:layout_margin="3dp"
									android:layout_weight="1"
									android:background="@color/Gainsboro"
									android:elevation="2dp"
									android:orientation="vertical">

									<CheckBox
										android:id="@+id/chk_luto"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_gravity="center_horizontal"
										android:layout_weight="1"
										android:onClick="calcular_valor"
										android:text=" Luto     "
										android:textColor="@color/BlueViolet"
										android:textStyle="bold" />

								</LinearLayout>
							</LinearLayout>
						</LinearLayout>
					</android.support.v7.widget.CardView>
				</LinearLayout>

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_alignParentBottom="true"
					android:layout_marginTop="1dp"
					android:background="@color/fondo_tresprov_1"
					android:gravity="center_horizontal">

					<Button
						android:id="@+id/bok"
						android:layout_width="100dp"
						android:layout_height="wrap_content"
						android:text="OK" />
				</LinearLayout>

			</LinearLayout>
		</LinearLayout>
	</ScrollView>

</RelativeLayout>
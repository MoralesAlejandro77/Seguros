<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_tresprov_2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:text="Nro. doc. "
                        android:textColor="@color/White" />

                    <TextView
                        android:id="@+id/tipodoc"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/tamano_campo"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/fondo_tresprov_1"
                        android:minWidth="50dp"
                        android:text="DNI  "
                        android:textColor="@color/Black"
                        android:textColorHint="#FDD835" />

                    <TextView
                        android:id="@+id/nro_doc"
                        android:layout_width="140dp"
                        android:layout_height="@dimen/tamano_campo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/fondo_tresprov_1"
                        android:ems="10"
                        android:textColor="@color/Black"
                        android:textColorHint="#FDD835" />

                    <ImageView
                        android:id="@+id/imageView40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/ic_persona" />

                    <ProgressBar
                        android:id="@+id/progressbar4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="false"
                        android:visibility="visible" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">

                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/nombrecompleto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:enabled="false"
                            android:hint="Apellido y Nombre"
                            android:inputType="textCapCharacters"
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/caractp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Carct."
                            android:inputType="number"
                            android:text=""
                            android:textColor="@color/Black"
                            android:textColorHighlight="@color/White"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/telefono"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Telefono Particular "
                            android:inputType="phone"
                            android:textColor="@color/Black"
                            android:textColorHighlight="@color/White"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="98dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/caract"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Carct."
                            android:inputType="number"
                            android:text=""
                            android:textColor="@color/Black"
                            android:textColorHighlight="@color/White"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textCursorDrawable="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/celular"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Celular "
                            android:inputType="phone"
                            android:textColor="@color/Black"
                            android:textColorHighlight="@color/White"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textCursorDrawable="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Compañia"
                        android:textColor="@color/White" />

                    <Spinner
                        android:id="@+id/companias"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tamano_campo"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/fondo_tresprov_1"
                        android:entries="@array/companias"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:text="Provincia "
                        android:textColor="@color/White" />

                    <Spinner
                        android:id="@+id/provincia"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/tamano_campo"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/fondo_tresprov_1"
                        android:entries="@array/provincias"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">

                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/departamento"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Departamento"
                            android:inputType="textCapCharacters"
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/cp"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Cod.Postal"
                            android:inputType="number"
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/localidad"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Localidad "
                            android:inputType="textCapCharacters"
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">

                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/calle"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Calle y Número"
                            android:inputType="textCapCharacters"
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/piso"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Piso"
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/White">


                        <android.support.design.widget.TextInputEditText

                            android:id="@+id/depto"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/tamano_campo"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/fondo_tresprov_1"
                            android:ems="10"
                            android:hint="Departamento "
                            android:textColor="@color/Black"
                            android:textColorHint="#FDD835"
                            android:textColorLink="@color/White"
                            android:textSize="14sp" />


                    </android.support.design.widget.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <ProgressBar
                        android:id="@+id/progressbar3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:indeterminate="false"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/bgrabar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/boton_modificar1" />
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
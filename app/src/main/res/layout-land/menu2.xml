<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tresprov"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/progressBar2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="false"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/logo1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/tresprov"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/version"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Yellow"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/White"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bloginaseg"
                            android:layout_width="300dp"
                            android:layout_height="70dp"
                            android:alpha="95"
                            android:background="@drawable/boton_foreground"
                            android:drawableLeft="@mipmap/ic_datosp"
                            android:elegantTextHeight="false"
                            android:elevation="2dp"
                            android:text="ASEGURADO"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:textStyle="bold|italic" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bcompania"
                            android:layout_width="300dp"
                            android:layout_height="70dp"
                            android:alpha="95"
                            android:background="@drawable/boton_foreground"
                            android:drawableLeft="@mipmap/ic_edificio"
                            android:elevation="2dp"
                            android:text="COMPAÃ‘IA"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:textStyle="bold|italic" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/bpreguntas"
                            android:layout_width="300dp"
                            android:layout_height="70dp"
                            android:alpha="95"
                            android:background="@drawable/boton_foreground"
                            android:drawableLeft="@mipmap/ic_preguntas1"
                            android:elevation="2dp"
                            android:text="PREGUNTAS FRECUENTES"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="16dp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="20dp"
                    android:background="#25676767"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/bcontactos"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:alpha="95"
                        android:background="#D0C2BFBF"
                        android:drawableTop="@mipmap/ic_contactenos"
                        android:minWidth="80dip"
                        android:padding="3dp"
                        android:text="Contactenos"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/bpromotores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:alpha="95"
                        android:background="#D0C2BFBF"
                        android:drawableTop="@mipmap/ic_usuarios"
                        android:minWidth="80dip"
                        android:padding="3dp"
                        android:text="Promotores"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/bprestadores"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="4dp"
                        android:alpha="95"
                        android:background="#D0C2BFBF"
                        android:drawableTop="@mipmap/ic_usuarios"
                        android:minWidth="80dip"
                        android:padding="3dp"
                        android:text="Prestadores"
                        android:textSize="10sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
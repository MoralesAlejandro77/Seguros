<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:background="@color/White"
    tools:context="com.seguros.presupuestos.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/encabezado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/tresprov">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/segvida" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Seguro de Vida"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

        <ProgressBar
            android:id="@+id/progressBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/bcompartir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginRight="40dp"
                android:src="@drawable/sharenube" />

            <ImageButton
                android:id="@+id/bayuda"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selectortable"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_help" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/encabezado"
        android:layout_alignParentLeft="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/encabezado2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Capital : "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Black"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/bgastos"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/datosflia"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/encabezado3"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/DarkOliveGreen"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ImageView01"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_titular" />

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Titular"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/White" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Edad: "
                            android:textColor="@color/Snow" />

                        <TextView
                            android:id="@+id/edad_titular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Snow" />

                        <TextView
                            android:id="@+id/Ssex_tit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="MASC"
                            android:textColor="@color/White"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/encabezado5"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/LightSteelBlue"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ImageView02"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="2dp"
                            android:src="@mipmap/ic_conyugue" />

                        <TextView
                            android:id="@+id/ley_conyugue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="Cony."
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/White" />

                        <TextView
                            android:id="@+id/TextView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="5dp"
                            android:text="Edad: "
                            android:textColor="@color/White" />

                        <TextView
                            android:id="@+id/edad_conyugue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:text="0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/White" />

                        <TextView
                            android:id="@+id/Ssex_cony"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="MASC"
                            android:textColor="@color/White"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/imageButton1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/index" />

                    <LinearLayout
                        android:id="@+id/piepagina"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/global_top_background"
                        android:gravity="right">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="Premio "
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/Aqua"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/totalPrima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="8dp"
                            android:text="IMPORTE"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/White"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/encabezado7"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:background="@color/color1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_create_black_24dp" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:text="Servicios"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/White" />

                    <CheckBox
                        android:id="@+id/chk_todos"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="2dp"
                        android:text="Todos.."
                        android:textColor="@color/Black" />
                </LinearLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/listView1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:fastScrollAlwaysVisible="true"></ListView>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>